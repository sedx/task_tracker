<div class="large-4 column large-offset-4">
<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "E-mail" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :name, "Имя" %><br />
    <%= f.text_field :name%>
  </div>

  <div class="field">
    <%= f.label :password, "Пароль" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> символов минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Пароль еще раз" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Зарегестрироваться", class:'button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>